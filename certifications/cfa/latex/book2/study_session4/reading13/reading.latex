\section{Equations}
\(\text{Price Elasticity of Demand} = {{\%\Delta \text{Quantity Demanded}} \over { \%\Delta \text{Price}}}  = {{\Delta / Avg.} \over {\Delta / Avg.}}\) \\
\hfill \\
\hfill \\
\(\text{Cross Elasticity of Demand} = {{\%\Delta \text{Quantity Demanded}} \over { \%\Delta \text{Price of Substitute or Compliment}}} \) \\
\hfill \\
\hfill \\
\(\text{Income Elasticity of Demand} = {{\%\Delta \text{Quantity Demanded}} \over { \%\Delta \text{in Income}}} \) \\
\hfill \\
\hfill \\
\(\text{Elasticity of Supply} = {{\%\Delta \text{Quantity Supplied}} \over { \%\Delta \text{in Price}}} \) \\
\hfill \\
